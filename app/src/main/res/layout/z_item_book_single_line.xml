<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/z_radius_10_white"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:padding="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/z_img_book_item_single"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_book_placeholder" />

    <LinearLayout
        android:id="@+id/z_layout_book_item_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/z_img_book_item_single"
        android:orientation="vertical">

        <TextView
            android:id="@+id/z_txt_title_book_item_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里是图书标题"
            android:textColor="@color/text_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/z_txt_author_book_item_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="8dp"
            android:text="图书作者" />
    </LinearLayout>

    <TextView
        android:id="@+id/z_txt_content_book_item_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_layout_book_item_single"
        android:layout_toRightOf="@id/z_img_book_item_single"
        android:ellipsize="end"
        android:lines="3"
        android:text="这里是图书内容...这里是图书内容...这里是图书内容...这里是图书内容...这里是图书内容...这里是图书内容..." />



</RelativeLayout>