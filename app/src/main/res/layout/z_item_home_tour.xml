<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@drawable/z_shape_bg_white_radius_10"
    android:elevation="5dp"
    android:orientation="horizontal">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/z_img_tour_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test"
        app:riv_corner_radius_bottom_left="10dp"
        app:riv_corner_radius_top_left="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/z_txt_tour_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="厦门鼓浪屿5日纯玩游 厦门鼓浪屿5日纯玩游 厦门鼓浪屿5日纯玩游 厦门鼓浪屿5日纯玩游 厦门鼓浪屿5日纯玩游 厦门鼓浪屿5日纯玩游 厦门鼓浪屿5日纯玩游 厦门鼓浪屿5日纯玩游 "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/z_txt_tour_item_merchant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="店铺：MG旅行" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/z_txt_tour_item_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已售1065" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>