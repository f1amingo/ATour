<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:background="@color/white_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/z_img_chat_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_cheese" />

    <RelativeLayout
        android:id="@+id/z_layout_chat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_txt_chat_time_left"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/z_img_chat_left"
        android:background="@drawable/z_chat_left_bg">

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/z_txt_chat_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="天王地虎"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/z_txt_chat_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="Kian，03/06 17:00" />

    <RelativeLayout
        android:id="@+id/z_layout_chat_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/z_txt_chat_time_right"
        android:layout_marginLeft="50dp"
        android:layout_toLeftOf="@id/z_img_chat_right"
        android:background="@drawable/z_chat_right_bg">

        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/z_txt_chat_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="宝塔河妖"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/z_txt_chat_time_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:text="03/06 17:00" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/z_img_chat_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_cheese" />

</RelativeLayout>