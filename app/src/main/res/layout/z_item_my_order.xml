<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/z_shape_bg_white_radius_10"
    android:elevation="3dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/z_txt_order_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:text="厦门鼓浪屿5日纯玩游 "
        android:textColor="@color/text_dark"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/z_txt_order_merchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="店铺：MG旅行" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/z_txt_my_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="￥0000"
            android:textColor="@color/color_red_google"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/z_txt_order_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="套餐类型" />

    <TextView
        android:id="@+id/z_txt_order_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="right"
        android:text="审核通过"
        android:textColor="@color/color_yellow_google" />

</LinearLayout>