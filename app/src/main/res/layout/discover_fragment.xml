<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/z_text_scan_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:drawableTop="@drawable/ic_scan_dark"
                android:focusable="true"
                android:text="扫一扫"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/z_text_scan_discover"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/z_white_50"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:drawableLeft="@drawable/ic_search_white_24dp"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/icon_gray"
                        android:gravity="center_vertical"
                        android:hint="搜索书名/作者" />
                </LinearLayout>

                <View
                    android:id="@+id/z_cover_search_discover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/z_img_list_layout_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_list_horizontal"
                android:tint="@color/white" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <com.youth.banner.Banner
        android:id="@+id/z_discover_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>